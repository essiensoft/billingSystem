# PHPNuxBill Production Environment Configuration
# Copy this file to .env and update with your actual values

# Application Configuration
APP_URL=https://yourdomain.com
TZ=UTC

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=phpnuxbill
DB_USER=phpnuxbill_user
DB_PASS=YourSecurePasswordHere123!

# MySQL Root Password (for database management)
MYSQL_ROOT_PASSWORD=YourSecureRootPasswordHere456!

# Port Configuration (change if needed)
APP_HTTP_PORT=8080
APP_HTTPS_PORT=8443
MYSQL_PORT=3306
PHPMYADMIN_PORT=8081

# Security Settings
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=

# Optional: Disable phpMyAdmin in production
# Comment out the phpmyadmin service in docker-compose.production.yml
